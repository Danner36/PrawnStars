#include "timer.h"
#include "adc.h"
#include "lcd.h"


int getDistance(int result){
    return ((50 * ((10*result) - 20311) )/46501) + 10;

}

void main() {
    adc_Start();
    lcd_init();

    while(1){

        int result = 0;
        result = adc_Read();

        lcd_printf("%d", result);
        lcd_printf("%d", getDistance(result));
        timer_waitMillis(200);


    }

    adc_Stop();
}

