void move_forward(oi_t *sensor, int centimeters) {

    int sum = 0;
    oi_setWheels(500, 500); // move forward; full speed
    while (sum < centimeters) {
        oi_update(sensor);
        sum += sensor->distance;
    }
    oi_setWheels(0, 0); // stop

    oi_free(sensor_data);

}

void turn_clockwise(oi_t *sensor, int degrees) {

}
