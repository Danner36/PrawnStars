#include "lcd.h"
#include "timer.h"

volatile int hours = 5;
volatile int mins = 30;
volatile int secs = 0;

void count_Up();

void main() {
    lcd_init();

    while(1){

        int sum = 0;

        while(sum<5){

            // Display the time as: 05:30:00
            lcd_printf("%02d:%02d:%02d", hours, mins, secs);

            sum++;

            timer_waitMillis(200);

        }

        count_Up();

    }

}


void count_Up(){
    if(secs == 59){
        secs = 0;
        if(minutes == 59){
            mins = 0;

            if(hours == 23){
                hours = 0
            }
            else{
                hours++;
            }
        }
        else{
            mins++
        }

    }
    else{
        secs++;
    }
}
